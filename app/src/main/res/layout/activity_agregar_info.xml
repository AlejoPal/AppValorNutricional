<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarInfo">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/sansationbold"
        android:gravity="center"
        android:text="@string/txtAgregarComida"
        android:textAlignment="center"
        android:textColor="@color/colornombreapp"
        android:textSize="40sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/sansationbold"
            android:text="@string/txtinstrucciones"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnAgregarDesayuno"
            android:layout_width="330dp"
            android:layout_height="65dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/rounded_button"
            android:text="@string/txtdesayuno"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnAgregarAlmuerzo"
            android:layout_width="330dp"
            android:layout_height="65dp"
            android:background="@drawable/rounded_button"
            android:text="@string/txtAlmuerzo"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnAgregarCena"
            android:layout_width="330dp"
            android:layout_height="65dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/rounded_button"
            android:text="@string/txtCena"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnInformacionGeneral"
            android:layout_width="330dp"
            android:layout_height="65dp"
            android:layout_marginVertical="40dp"
            android:background="@drawable/rounded_button"
            android:text="@string/txtHistorial"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/textirmanual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/sansationbold"
        android:foregroundGravity="bottom"
        android:text="@string/btn_ir_manual"
        android:textColor="@color/botones"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>