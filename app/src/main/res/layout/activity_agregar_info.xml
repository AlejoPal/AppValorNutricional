<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarInfo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/sansationbold"
            android:text="@string/txtAgregarComida"
            android:textAlignment="center"
            android:textColor="@color/colornombreapp"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btnAgregarDesayuno"
            android:layout_width="330dp"
            android:layout_height="65dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/rounded_button"
            android:text="@string/txtdesayuno"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnAgregarAlmuerzo"
            android:layout_width="330dp"
            android:layout_height="65dp"
            android:background="@drawable/rounded_button"
            android:text="@string/txtAlmuerzo"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnAgregarCena"
            android:layout_width="330dp"
            android:layout_height="65dp"
            android:layout_marginVertical="20dp"

            android:background="@drawable/rounded_button"
            android:text="@string/txtCena"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>