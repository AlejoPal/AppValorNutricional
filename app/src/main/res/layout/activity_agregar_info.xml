<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/fondobase4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <AutoCompleteTextView
            android:id="@+id/txtBusqueda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:completionThreshold="1"
            android:hint="@string/hintBuscar"
            android:textColor="@color/black"
            style="@style/AutoCompleteTextViewStyle"
            />

        <Button
            android:id="@+id/btnAgregarDesayuno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtdesayuno"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnAgregarAlmuerzo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtAlmuerzo"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnAgregarCena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtCena"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>